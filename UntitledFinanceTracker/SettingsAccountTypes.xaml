<UserControl x:Class="UntitledFinanceTracker.SettingsAccountTypes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UntitledFinanceTracker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="dgEntries" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <!-- Added binding to format date, otherwise date and time would be shown -->
                <DataGridTextColumn Header="Account Type" Width="122" Binding="{Binding AccountType}"/>
                </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
