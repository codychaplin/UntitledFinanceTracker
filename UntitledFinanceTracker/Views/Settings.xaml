<UserControl x:Class="UntitledFinanceTracker.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UntitledFinanceTracker.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
            <ListView Style="{StaticResource Menu}" x:Name="lvSettingsMenu" Margin="10 10 0 10" SelectionChanged="SettingsMenuSelectionChanged">
            <ListViewItem Style="{StaticResource MenuItem}" x:Name="lviGeneral" Content="General"/>
            <ListViewItem Style="{StaticResource MenuItem}" x:Name="lviAccountTypes" Content="Account Types" />
            <ListViewItem Style="{StaticResource MenuItem}" x:Name="lviAccounts" Content="Accounts" />
            <ListViewItem Style="{StaticResource MenuItem}" x:Name="lviCategories" Content="Categories" />
        </ListView>

        <Grid Grid.Column="1" Grid.Row="1" x:Name="SettingsPanel" Margin="0 10 0 0"></Grid>
    </Grid>
</UserControl>
